# PostgreSQL Client Authentication Configuration File
# Generated by Ansible

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# "local" is for Unix domain socket connections only
local   all             all                                     {{ postgresql_auth_method }}

# IPv4 local connections:
{% if postgresql_allow_local_connections %}
host    all             all             127.0.0.1/32            {{ postgresql_auth_method }}
{% endif %}

# IPv6 local connections:
{% if postgresql_allow_local_connections %}
host    all             all             ::1/128                 {{ postgresql_auth_method }}
{% endif %}

# External connections:
{% if postgresql_allow_external_connections %}
host    all             all             0.0.0.0/0               {{ postgresql_auth_method }}
host    all             all             ::/0                     {{ postgresql_auth_method }}
{% endif %}

# Allow replication connections from localhost, by a user with the
# replication privilege.
local   replication     all                                     {{ postgresql_auth_method }}
{% if postgresql_allow_local_connections %}
host    replication     all             127.0.0.1/32            {{ postgresql_auth_method }}
host    replication     all             ::1/128                 {{ postgresql_auth_method }}
{% endif %}
